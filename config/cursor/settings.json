{
    "window.commandCenter": true,
    "git.autofetch": true,
    "go.goroot": "/opt/homebrew/opt/go/libexec",
    "go.gopath": "${env:HOME}/code",
    "editor.fontFamily": "'Jetbrains Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 15,
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "${env:HOME}/.nix-profile/bin/zsh",
            "args": [
                "-l"
            ],
            "env": {
                "TMUX": "0"
            }
        }
    },
    "workbench.colorTheme": "Ros√© Pine Moon (no italics)",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "g", "r", "r" ],
            "commands": [ "references-view.findReferences" ]
        },
        {
            "before": [ "g", "i" ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "<space>", "w", "t" ],
            "commands": [ "editor.action.toggleWordWrap" ]
        },
        {
            "before": [ "<space>", "d" ],
            "commands": [ "editor.action.goToTypeDefinition" ]
        },
        {
            "before": [ "<space>", "g", "p" ],
            "commands": [ "editor.action.dirtydiff.next" ]
        },
        {
            "before": [ "[", "c" ],
            "commands": [ "workbench.action.editor.previousChange" ]
        },
        {
            "before": [ "]", "c" ],
            "commands": [ "workbench.action.editor.nextChange" ]
        },
        {
            "before": [ "[", "d" ],
            "commands": [ "editor.action.marker.prev" ]
        },
        {
            "before": [ "]", "d" ],
            "commands": [ "editor.action.marker.next" ]
        },
        {
            "before": [ "<C-p>" ],
            "commands": [ "extension.vim_ctrl+i" ]
        },
        {
            "before": [ "g", "r", "i" ],
            "commands": [ "editor.action.goToImplementation" ]
        },
        {
            "before": [ "<space>", "n", "<space>" ],
            "commands": [ "workbench.files.action.showActiveFileInExplorer" ]
        },
        {
            "before": [ "<space>", "g", "s" ],
            "commands": [ "git.diff.stageHunk" ]
        },
    ],
    "editor.lineNumbers": "relative",
    "git.untrackedChanges": "separate",
    "editor.wordWrap": "off",
    "terminal.integrated.macOptionIsMeta": true,
    "makefile.configureOnOpen": false,
    "git.blame.editorDecoration.enabled": false,
    "git.blame.statusBarItem.enabled": true,
    "[json]": {
        "editor.formatOnSave": false
    },
    "[jsonc]": {
        "editor.formatOnSave": false
    },
    "redhat.telemetry.enabled": false,
    "[dockercompose]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced",
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    }
}
// vim: ft=jsonc
